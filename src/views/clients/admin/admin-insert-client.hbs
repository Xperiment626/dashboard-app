<div class="col-md-4 mx-auto admin-cu-c">
    <div class="card mt-4">
        <div class="card-header">
            <h2>New Client</h2>
        </div>
        <div class="card-body">
            <form action="/admin/insert-client" method="POST">
                <div class="form-group">
                    <input type="text" name="full_name" class="form-control" placeholder=" Enter Full Name" autofocus>
                </div>
                <br>
                <div class="form-group">
                    <input type="text" name="identification_number" class="form-control" placeholder=" Enter ID number"></input>
                </div>
                <br>
                <div class="form-group">
                    <input type="email" name="email" class="form-control" placeholder=" Enter Email"></input>
                </div>
                <br>
                <div class="form-group">
                    <input type="number" name="phone" class="form-control" placeholder=" Enter phone number"></input>
                </div>
                <br>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>