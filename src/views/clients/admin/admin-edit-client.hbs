<div class="col-md-4 mx-auto admin-cu-e">
    <div class="card">
        <div class="card-header">
            <h3>Edit Client</h3>
        </div>
        <div class="card-body">
            <form action="/admin/edit-client/{{client._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="full_name" class="form-control" placeholder=" Edit Full Name" value="{{client.full_name}}">
                </div>
                <br>
                <div class="form-group">
                    <input type="text" name="identification_number" class="form-control" placeholder=" ID number" value="{{client.identification_number}}"></input>
                </div>
                <br>
                <div class="form-group">
                    <input type="email" name="email" class="form-control" placeholder=" Email" value="{{client.email}}"></input>
                </div>
                <br>
                <div class="form-group">
                    <input type="number" name="phone" class="form-control" placeholder=" Phone number" value="{{client.phone}}"></input>
                </div>
                <br>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>